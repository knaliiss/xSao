<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="allPain" prefHeight="403.0" prefWidth="634.0" styleClass="main-pane" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.knalis.xsao.controllers.MainController">
    <children>
        <!-- Верхняя панель с заголовком и кнопкой настроек -->
        <Pane fx:id="topPanel" layoutX="14.0" layoutY="14.0" prefHeight="93.0" prefWidth="607.0">
            <children>
                <Label layoutX="14.0" layoutY="30.0" prefHeight="33.0" prefWidth="65.0" styleClass="loading-big-label" text="xSao" textFill="WHITE" />
                  <Button fx:id="minimizeButton" layoutX="513.0" layoutY="29.0" prefHeight="35.0" prefWidth="40" styleClass="minimize-button" text="—" textAlignment="CENTER" textFill="white" />
                  <Button fx:id="closeButton" layoutX="553.0" layoutY="29.0" prefHeight="35.0" prefWidth="40" styleClass="close-button" text="X" textAlignment="CENTER" textFill="white" />

            </children>
        </Pane>

        <!-- Центральная панель -->
        <AnchorPane fx:id="backPain" layoutX="8.0" layoutY="105.0" prefHeight="277.0" prefWidth="619.0" styleClass="servers-pane-background">
         <children>
            <Button fx:id="recordButton" layoutX="52.0" layoutY="14.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="95.0" text="Button" styleClass="cristalix-play-button" />
            <Button fx:id="playButton" layoutX="52.0" layoutY="53.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="95.0" text="Button" styleClass="cristalix-play-button" />
