            <ComboBox fx:id="scriptsComboBox" layoutX="52.0" layoutY="182.0" prefHeight="39.0" prefWidth="195.0" />
            <TextArea fx:id="scriptTextArea" layoutX="355.0" layoutY="14.0" prefHeight="251.0" prefWidth="240.0" />
         </children>
        </AnchorPane>
    </children>
</Pane>
